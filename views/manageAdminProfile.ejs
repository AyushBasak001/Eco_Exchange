<%- include('partials/htmlHead.ejs') %>

<body>
    <div class="top-bar">
        <%- include('partials/topBar.ejs') %>
    </div>

    <div class="side-bar">
        <%- include('partials/adminSidebar.ejs') %>
    </div>

    <div class="main-content">
        <p>Manage your profile Here!!</p>
        <div class="container profile-grid">

            <!-- ================= USER INFO ================= -->
            <section class="profile-card">
                <h2 class="card-title">User Information</h2>
                <p><strong>Username:</strong> <%= user.username %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Role:</strong> <%= user.role %></p>
            </section>

            <!-- ================= ADDRESS FORM ================= -->
            <section class="profile-card">
                <h2 class="card-title">Address Details</h2>

                <form class="address-form" method="POST" action="/admin/profile/address">

                    <div class="form-group">
                        <label>Line 1</label>
                        <input type="text" name="line1" value="<%= address.line1 %>">
                    </div>

                    <div class="form-group">
                        <label>Line 2</label>
                        <input type="text" name="line2" value="<%= address.line2 %>">
                    </div>

                    <div class="form-group">
                        <label>City</label>
                        <input type="text" name="city" value="<%= address.city %>">
                    </div>

                    <div class="form-group">
                        <label>State</label>
                        <input type="text" name="state" value="<%= address.state %>">
                    </div>

                    <div class="form-group">
                        <label>Pincode</label>
                        <input type="text" name="pincode" value="<%= address.pincode %>">
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" name="phone" value="<%= address.phone %>">
                    </div>

                    <button class="btn success" type="submit">Save Address</button>
                </form>
            </section>
        </div>
    </div>

    <div class="footer">
        <%- include('partials/footer.ejs') %>
    </div>
</body>
</html>