<%- include('partials/htmlHead.ejs') %>  <!-- , {pageCss: "/styles/userProfile.css"} -->

<body>
    <div class="top-bar">
        <%- include('partials/topBar.ejs') %>
    </div>

    <div class="side-bar">
        <%- include('partials/userSidebar.ejs') %>
    </div>

    <div class="main-content">
        <!-- ================= PROFILE HEADER ================= -->
        <header class="profile-header">
            <div class="container">
                <h1 class="profile-title">My Profile</h1>
                <p class="profile-subtitle">Manage your account, address, and listings</p>
            </div>
        </header>

        <main class="profile-section">
            <div class="container profile-grid">

                <!-- ================= USER INFO ================= -->
                <section class="profile-card">
                    <h2 class="card-title">User Information</h2>
                    <p><strong>Username:</strong> <%= user.username %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Role:</strong> <%= user.role %></p>
                </section>

                <!-- ================= ADDRESS FORM ================= -->
                <section class="profile-card">
                    <h2 class="card-title">Address Details</h2>

                    <form class="address-form" method="POST" action="/user/profile/address">

                        <div class="form-group">
                            <label>Line 1</label>
                            <input type="text" name="line1" value="<%= address.line1 %>">
                        </div>

                        <div class="form-group">
                            <label>Line 2</label>
                            <input type="text" name="line2" value="<%= address.line2 %>">
                        </div>

                        <div class="form-group">
                            <label>City</label>
                            <input type="text" name="city" value="<%= address.city %>">
                        </div>

                        <div class="form-group">
                            <label>State</label>
                            <input type="text" name="state" value="<%= address.state %>">
                        </div>

                        <div class="form-group">
                            <label>Pincode</label>
                            <input type="text" name="pincode" value="<%= address.pincode %>">
                        </div>

                        <div class="form-group">
                            <label>Phone</label>
                            <input type="text" name="phone" value="<%= address.phone %>">
                        </div>

                        <button class="btn success" type="submit">Save Address</button>
                    </form>
                </section>

                <!-- ================= MY PRODUCTS ================= -->
                <section class="profile-card full-width">
                    <h2 class="card-title">My Products</h2>

                    <% if (products.length === 0) { %>
                        <p class="empty-state">No products listed yet.</p>
                    <% } %>

                    <% products.forEach(p => { %>
                        <div class="product-row">
                            <span class="product-title"><%= p.title %></span>
                            <span class="product-status"><%= p.status %></span>
                            <span class="product-qty">Qty: <%= p.quantity_available %></span>
                        </div>
                    <% }) %>
                </section>

            </div>
        </main>
    </div>

    <div class="footer">
        <%- include('partials/footer.ejs') %>
    </div>
</body>
</html>